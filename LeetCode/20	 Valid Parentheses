char pairs[][2] = {
        '(', ')',
        '[', ']',
        '{', '}',
};

stack<char> S;

class Solution {
public:
   bool isValid(string s) {
    bool res = true;
    for (int i = 0; i < s.size(); i++) {
        if (s[i] == '(' || s[i] == '[' || s[i] == '{') {
            S.push(s[i]);
        } else if (s[i] == ')' || s[i] == ']' || s[i] == '}') {
            if (S.empty()) {
                return false;
            }
            char c = S.top();
            S.pop();
            for (int j = 0; j < 3; j++) {
                if (pairs[j][1] == s[j]) {
                    if (pairs[j][0] != c) {
                        return false;
                    }
                }
            }
        }
    }
    return S.empty();
}
};
